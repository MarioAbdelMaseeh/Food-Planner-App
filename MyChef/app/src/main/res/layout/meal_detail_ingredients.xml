<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/secondary">
<androidx.cardview.widget.CardView
    android:id="@+id/detailsImageCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cardCornerRadius="50dp"
    android:layout_margin="20dp"
    app:contentPadding="10dp"
    android:elevation="10dp">
    <ImageView
        android:id="@+id/ingredientImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/ingredient_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/new_final_logo"
        android:scaleType="centerCrop"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/detailsMeasure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Measure"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/detailsIngredient"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Ingredients"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:dividerColor="@color/second_primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>